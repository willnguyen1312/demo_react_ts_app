{
  "name": "ts-app",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node app.js",
    "build": "cd client && yarn build",
    "heroku-postbuild":
      "cd client && npm install --only=dev && npm install && npm run build",
    "client": "cd client && yarn start",
    "server": "nodemon server.ts",
    "serve": "concurrently \"yarn server\" \"yarn client\"",
    "setup": "yarn && cd client && yarn",
    "production": "yarn build && yarn server"
  },
  "dependencies": {
    "@types/express": "^4.11.1",
    "compression": "^1.7.0",
    "cors": "^2.8.4",
    "express": "^4.15.3"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.0",
    "concurrently": "^3.5.0",
    "nodemon": "^1.17.2"
  }
}
